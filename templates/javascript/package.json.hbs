{
  "name": "{{projectName}}",
  "version": "1.0.0",
  "description": "An Express.js backend project generated by create-express-server.",
  "main": "src/server.js",
  "type": "module",
  "keywords": [],
  "author": "",
  "license": "ISC",
  
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "build": "echo 'No explicit build step for JavaScript project.'",
    {{#if isDrizzle}}
    "db:push": "drizzle-kit push:pg",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "drizzle-kit migrate:pg",
    "db:studio": "drizzle-kit studio --verbose",
    "db:drop": "drizzle-kit drop:pg",
    {{/if}}
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "prettier": "prettier --write . --loglevel silent"
  },

  "dependencies": {
    "express": "^4.19.2",
    "dotenv": "^16.4.5",
    "cors": "^2.8.5"
    {{#if isMongo}},
    "mongoose": "^8.6.1"
    {{/if}}
    {{#if isPostgres}},
    "pg": "^8.11.0",
    "drizzle-orm": "^0.31.2"
    {{/if}}
    {{#if useJwt}},
    "jsonwebtoken": "^9.0.2"
    {{/if}}
    {{#if useBcrypt}},
    "bcryptjs": "^2.4.3"
    {{/if}}
    {{#if useMulter}},
    "multer": "^1.4.5-lts.1"
    {{/if}}
  },

  "devDependencies": {
    "nodemon": "^3.1.4",
    "morgan": "^1.10.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3",
    "dotenv-cli": "^8.0.0"
  }
}