{
  "name": "{{projectName}}",
  "version": "1.0.0",
  "description": "An Express.js backend project generated by create-xstack.",
  "main": "src/server.js",
  "type": "module",
  "keywords": [],
  "author": "",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "build": "echo 'No explicit build step for JavaScript project.'",
    {{#if isDrizzle}}
    "db:push": "drizzle-kit push:pg",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "drizzle-kit migrate:pg",
    "db:studio": "drizzle-kit studio --verbose",
    "db:drop": "drizzle-kit drop:pg",
    {{/if}}
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "prettier": "prettier --write . --log-level silent"
  },
  "dependencies": {
    "express": "latest",
    "dotenv": "latest",
    "cors": "latest"
    {{#if isMongo}},
    "mongoose": "latest"
    {{/if}}
    {{#if isPostgres}},
    "pg": "latest",
    "drizzle-orm": "latest"
    {{/if}}
    {{#if useJwt}},
    "jsonwebtoken": "latest"
    {{/if}}
    {{#if useBcrypt}},
    "bcryptjs": "latest"
    {{/if}}
    {{#if useMulter}},
    "multer": "latest"
    {{/if}}
  },
  "devDependencies": {
    "nodemon": "latest",
    "morgan": "latest",
    "eslint": "latest",
    "eslint-config-prettier": "latest",
    "eslint-plugin-prettier": "latest",
    "prettier": "latest",
    "dotenv-cli": "latest"
  }
}
