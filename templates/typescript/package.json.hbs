{
  "name": "{{projectName}}",
  "version": "1.0.0",
  "description": "An Express.js backend project generated by create-xstack.",
  "main": "dist/server.js",
  "type": "module",
  "keywords": [],
  "author": "",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon --watch src --ext ts --exec tsx src/server.ts",
    "start": "tsx src/server.ts",
    "build": "tsc",
    {{#if isDrizzle}}
    "db:push": "drizzle-kit push:pg",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "drizzle-kit migrate:pg",
    "db:studio": "drizzle-kit studio --verbose",
    "db:drop": "drizzle-kit drop:pg",
    {{/if}}
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "prettier": "prettier --write . --log-level silent"
  },
  "dependencies": {
    "express": "latest",
    "dotenv": "latest",
    "cors": "latest"
    {{#if isMongo}},
    "mongoose": "latest"
    {{/if}}
    {{#if isPostgres}},
    "pg": "latest",
    "drizzle-orm": "latest"
    {{/if}}
    {{#if useJwt}},
    "jsonwebtoken": "latest"
    {{/if}}
    {{#if useBcrypt}},
    "bcryptjs": "latest"
    {{/if}}
    {{#if useMulter}},
    "multer": "latest"
    {{/if}}
  },
  "devDependencies": {
    "nodemon": "latest",
    "morgan": "latest",
    "@types/cors": "latest",
    "@types/express": "latest",
    "@types/node": "latest",
    "typescript": "latest",
    "ts-node": "latest",
    "tsx": "latest",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "eslint": "latest",
    "eslint-config-prettier": "latest",
    "eslint-plugin-prettier": "latest",
    "prettier": "latest"
    {{#if useJwt}},
    "@types/jsonwebtoken": "latest"
    {{/if}}
    {{#if isMongo}},
    "@types/mongoose": "latest"
    {{/if}}
    {{#if isPostgres}},
    "@types/pg": "latest",
    "drizzle-kit": "latest"
    {{/if}}
    {{#if useMulter}},
    "@types/multer": "latest"
    {{/if}},
    "dotenv-cli": "latest"
  }
}
